@*@using TasKTrackerApp.ViewModels.Account
*@

@model RegisterViewModel


<div class="col-md-6">
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Register</h4>
        </div>
        <div class="card-body">
            <div class="col-md-12 mb-4 mt-4 pl-0">
                <form method="post" asp-controller="Account" asp-action="Register">
                      <div class="form-row">
                            <div class="form-group col-md-6">
                              <label asp-for="FirstName"></label>
                              <input asp-for="FirstName" type="text" class="form-control"  placeholder="First Name">
                            </div>
                            <div class="form-group col-md-6">
                              <label asp-for="LastName"></label>
                              <input asp-for="LastName" type="text" class="form-control"  placeholder="Last Name">
                            </div>
                      </div>
                      <div class="form-row">
                            <div class="form-group col-md-6">
                              <label asp-for="BirthDate"></label>
                              <input asp-for="BirthDate" type="date" class="form-control">
                            </div>
                            <div class="form-group col-md-6">
                              <label asp-for="Gender"></label>
                              <input asp-for="Gender" type="text" class="form-control"  placeholder="Gender">
                            </div>
                      </div>
                       <div class="form-row">
                            <div class="form-group col-md-6">
                              <label asp-for="State"></label>
                              <input asp-for="State" type="text" class="form-control"  placeholder="State">
                            </div>
                            <div class="form-group col-md-6">
                              <label asp-for="City"></label>
                              <input asp-for="City" type="text" class="form-control"  placeholder="City">
                            </div>
                      </div>
                      <div class="form-row">
                            <div class="form-group col-md-6">
                              <label asp-for="ZipCode"></label>
                              <input asp-for="ZipCode" type="text" class="form-control"  placeholder="Zip Code">
                            </div>
                            <div class="form-group col-md-6">
                              <label asp-for="PhoneNumber"></label>
                              <input asp-for="PhoneNumber" type="text" class="form-control"  placeholder="Phone #">
                            </div>
                      </div>
                       <div class="form-row">
                            <div class="form-group col-md-6">
                              <label asp-for="Email"></label>
                              <input asp-for="Email" type="email" class="form-control" placeholder="Email Address">
                            </div>
                            <div class="form-group col-md-6">
                              <label asp-for="Password"></label>
                              <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                            </div>
                      </div>
                      <div class="form-row">
                            <div class="form-group col-md-6">
                              <label asp-for="ConfirmPassword"></label>
                              <input asp-for="ConfirmPassword" type="password" class="form-control"  placeholder="Confirm Password">
                            </div>
                            <div class="form-group col-md-6">
                             
                            </div>
                      </div>

                  <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
